<script>
    $(document).ready(function () {
        const
            urlparam = window.location.pathname.split('/').filter(part => part),
            page = urlparam[urlparam.length - 1] || 'No path';

        if (page == 'dashboard' || page == 'admin') {
            $('#sidebar a:nth-of-type(1)').addClass('menu_active');
        }
        else if (page == 'users') {
            $('#sidebar a:nth-of-type(2)').addClass('menu_active');
        }
        else if (page == 'add-user') {
            $('#sidebar a:nth-of-type(3)').addClass('menu_active');
        }
        else if (page == 'settings') {
            $('#sidebar a:nth-of-type(4)').addClass('menu_active');
        }
        else if (page == 'logs') {
            $('#sidebar a:nth-of-type(5)').addClass('menu_active');
        }

        let dt = new Date(),
            yr = dt.getFullYear()

        $('#cy').text(yr)

        $('#menu').on('click', function () {
            $('.mask').show()
            $('#sidebar').css('left', '0')
        })
        $('.mask').on('click', function () {
            $('.mask').hide()
            $('#sidebar').css('left', '-250px')
        })

        $('.close').on('click', function (e) {
            e.preventDefault()
            $('.w3-modal, #message').hide()
        })

        $('#signout').on('click', function (e) {
            e.preventDefault()
            $.get('/logout', (d) => {
                window.location.reload()
            })
        })
    })
</script>